<h1 class="page-header">Administradores</h1>
  <% if @admin.errors.any? %><!-- Verifica se há erros e joga o erro na tela - SM -->
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <ul><!-- Envia as mensagens de erro para a tela - SM -->
          <% @admin.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= action %><!-- Recebe o nome da página -->
  </div>
  <div class="panel-body">
    <div class="col-lg-6">
      <%= form_for([:backoffice, @admin]) do |f| %>
        <div class="form-group">
          <label>Email</label>
          <%= f.text_field :email, class: "form-control", placeholder: "Email do administrador" %>
        </div>
        <div class="form-group">
          <label>Senha</label>
          <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
        </div>
        <div class="form-group">
          <label>Confirmação de Senha</label>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmação da senha" %>
        </div>

        <button type="submit" class="btn btn-default">Salvar</button>
      <% end %><!-- Fim-Formulario -->
    </div>
    <div class="table-responsive">
    </div><!-- /.table-responsive -->
  </div><!-- /.panel-body -->
</div>
