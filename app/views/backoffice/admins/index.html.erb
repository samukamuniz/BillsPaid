<h1 class="page-header">Administradores</h1>
  <div class="panel panel-default">
    <div class="panel-heading">
      Listando Adiministradores
      <%= link_to new_backoffice_admin_path, class: "btn btn-success pull-right", style: "margin-top: -6px" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Id</th>
              <th>Nome</th>
              <th>Email</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.id %></td>
              <td><%= admin.name %></td>
              <td><%= admin.email %></td>
              <td>
                <%= link_to edit_backoffice_admin_path(admin), class: "btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <% if current_admin.id != admin.id %>
                  <%= link_to backoffice_admin_path(admin), method: :delete, class: "btn btn-danger btn-circle",
                    data: {confirm: "VocÃª deseja realmente excluir <b>#{admin.email}</b>?"} do %>
                    <i class="fa fa-minus"></i>
                  <% end %>
                <% else %>
                  <%= link_to '#', disabled: "disabled", class: "btn btn-danger btn-circle" do %>
                    <i class="fa fa-minus"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /.table-responsive -->
    </div><!-- /.panel-body -->
  </div>
