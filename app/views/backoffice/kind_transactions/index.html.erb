<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Tipos de Transações</h1>

          <div class="panel panel-default">
            <div class="panel-heading">
              Kitchen Sink
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Descrição</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @kind_transactions.each do |kind_transaction| %>
                    <tr>
                      <td><%= kind_transaction.id %></td>
                      <td><%= kind_transaction.description %></td>
                      <td>
                        <button type="button" class="btn btn-primary btn-circle"><i class="fa fa-edit"></i></button>
                        <button type="button" class="btn btn-danger btn-circle"><i class="fa fa-times"></i></button>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->