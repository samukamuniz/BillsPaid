<h1 class="page-header">Tipos de Transações</h1>
  <div class="panel panel-default">
    <div class="panel-heading">
      Listando Tipos de Transações
      <%= link_to new_backoffice_kind_transaction_path, class: "btn btn-success pull-right", style: "margin-top: -6px" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Id</th>
              <th>Descrição</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @kind_transactions.each do |kind_transaction| %>
            <tr>
              <td><%= kind_transaction.id %></td>
              <td><%= kind_transaction.description %></td>
              <td>
                <%= link_to edit_backoffice_kind_transaction_path(kind_transaction), class: "btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <button type="button" disabled="disabled" class="btn btn-danger btn-circle"><i class="fa fa-minus"></i></button>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /.table-responsive -->
    </div><!-- /.panel-body -->
  </div>
