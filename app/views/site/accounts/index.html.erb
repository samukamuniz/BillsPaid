<h1 class="page-header"></h1>
<div class="panel panel-default">
  <div class="panel-heading">
    Listando as contas do usuário
    <%= link_to new_site_account_path, class: "btn btn-success pull-right", style: "margin-top: -6px" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Conta</th>
            <th>Valor</th>
            <th>Membro</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @accounts.each do |account| %>
          <tr>
            <td><%= account.description %></td>
            <td><%= humanized_money_with_symbol(account.amount) %></td>
            <td><%= account.member.email %></td>
            <td>
              <%= link_to edit_site_account_path(account), class: "btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to site_account_path(account.id), method: :delete, class: "btn btn-danger btn-circle", 
                data: {confirm: "Você deseja realmente excluir (#{account.description})?"} do %>
                <i class="fa fa-minus"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- /.table-responsive -->
  </div><!-- /.panel-body -->
</div>
