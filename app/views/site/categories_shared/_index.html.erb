<h1 class="page-header"></h1>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= action %><!-- Recebe o nome da página -->
    <%# Verifica qual o botão "new" será liberado a partir do tipo de transação %>
    <% if @categories_type == 1 %>
      <%= link_to new_site_expense_type_path, class: "btn btn-success pull-right", style: "margin-top: -6px" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    <% else %>
      <%= link_to new_site_income_type_path, class: "btn btn-success pull-right", style: "margin-top: -6px" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>Descrição</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.kind_transaction %></td>
            <td><%= category.description %></td>
            <td>
            <% if @categories_type == 1 %>
              <%= link_to edit_site_expense_type_path(category), class: "btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to site_expense_type_path(category.id), method: :delete, class: "btn btn-danger btn-circle", 
                data: {confirm: "Você deseja realmente excluir (#{category.description})?"} do %>
                <i class="fa fa-minus"></i>
              <% end %>
            <% else %>
              <%= link_to edit_site_income_type_path(category), class: "btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to site_income_type_path(category.id), method: :delete, class: "btn btn-danger btn-circle", 
                data: {confirm: "Você deseja realmente excluir (#{category.description})?"} do %>
                <i class="fa fa-minus"></i>
              <% end %>
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- /.table-responsive -->
  </div><!-- /.panel-body -->
</div>