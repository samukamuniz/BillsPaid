<h1 class="page-header">Categorias</h1>
  <% if @category.errors.any? %><!-- Verifica se há erros e joga o erro na tela - SM -->
  <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <ul><!-- Envia as mensagens de erro para a tela - SM -->
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
  <% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= action %><!-- Recebe o nome da página -->
  </div>
  <div class="panel-body">
    <div class="col-lg-6">
      <%= form_for([:site, @category]) do |f| %><!-- Formulario -->
        <div class="form-group">
          <%= f.label :description %><br>
          <%= f.text_field :description, class: "form-control", placeholder: "Ex: Carteira" %>
        </div>

        <button type="submit" class="btn btn-default">Salvar</button>
      <% end %><!-- Fim-Formulario -->
    </div>
    <div class="table-responsive">
    </div><!-- /.table-responsive -->
  </div><!-- /.panel-body -->
</div>