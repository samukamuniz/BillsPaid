<h1 class="page-header">Categorias</h1>
<div class="panel panel-default">
  <div class="panel-heading">
    Listando as categorias
    <%= link_to new_site_category_path, class: "btn btn-success pull-right", style: "margin-top: -6px" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>Descrição</th>
            <th>Membro</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.kind_transaction_br %></td>
            <td><%= category.description %></td>
            <td><%= category.member.email %></td>
            <td>
              <%= link_to edit_site_category_path(category), class: "btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to site_category_path(category.id), method: :delete, class: "btn btn-danger btn-circle", 
                data: {confirm: "Você deseja realmente excluir (#{category.description})?"} do %>
                <i class="fa fa-minus"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- /.table-responsive -->
  </div><!-- /.panel-body -->
</div>