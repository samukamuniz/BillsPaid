<h1 class="page-header">Transações</h1>
  <% if @transaction.errors.any? %><!-- Verifica se há erros e joga o erro na tela - SM -->
  <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <ul><!-- Envia as mensagens de erro para a tela - SM -->
        <% @transaction.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
  <% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= action %><!-- Recebe o nome da página -->
  </div>
  <div class="panel-body">
    <div class="col-lg-6">
      <%= form_for([:site, @transaction]) do |f| %><!-- Formulario -->
        
        <div class="form-group">
          <%= f.label :date %><br>
          <%= f.date_field :date %>
        </div>

        <div class="form-group">
          <%= f.label :description %><br>
          <%= f.text_field :description, class: "form-control", placeholder: "Ex: Comida" %>
        </div>

        <div class="form-group">
          <%= f.label :category_id %><br>
          <%= collection_select(:transaction, :category_id, @category_options_for_select, :id, :description, class:"form-control") %>
        </div>

        <div class="form-group">
          <%= f.label :account_id %><br>
          <%= collection_select(:transaction, :account_id, @account_options_for_select, :id, :description) %>
        </div>

        <div class="form-group input-group">
            <span class="input-group-addon">R$</span>
            <%= f.text_field :amount, class: "form-control" %>
        </div>

        <div class="checkbox">
            <%= f.label :paid %><br>
            <%= f.check_box :paid %>
        </div>

        <button type="submit" class="btn btn-default">Salvar</button>
      <% end %><!-- Fim-Formulario -->
    </div>
    <div class="table-responsive">
    </div><!-- /.table-responsive -->
  </div><!-- /.panel-body -->
</div>
